# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=lucky_voucher
DB_USER=root
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_SECRET=your-super-secret-cookie-key-change-in-production

# Device Fingerprint HMAC Key
DEVICE_HMAC_SECRET=your-super-secret-device-hmac-key-change-in-production

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Lucky Voucher System <noreply@luckyvoucher.com>

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
SPIN_RATE_LIMIT_MAX=5

# Data Retention (days)
DATA_RETENTION_DAYS=90

# Feature Flags
ENABLE_OTP_VERIFICATION=false
ENABLE_RECAPTCHA=false
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
FRONTEND_URL=http://localhost:3000
