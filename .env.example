# Environment variables for Docker Compose
# Copy this file to .env and update with your actual values

# Database Configuration
DB_ROOT_PASSWORD=rootpassword123
DB_NAME=voucher_system
DB_USER=voucher_user
DB_PASSWORD=password123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRE=7d

# Device Fingerprinting
DEVICE_SECRET=your-device-fingerprint-secret-key-change-this-in-production

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Lucky Voucher System <noreply@yourdomain.com>"

# Optional: External database (if not using Docker database)
# DB_HOST=localhost
# DB_PORT=3306
