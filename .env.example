# Lucky Voucher System - Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000
BACKEND_PORT=5000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=lucky_voucher
DB_USER=voucher_user
DB_PASSWORD=password123
DB_ROOT_PASSWORD=rootpassword123

# ===========================================
# JWT & SECURITY CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_SECRET=your-super-secret-cookie-key-change-in-production

# Device Fingerprint HMAC Key
DEVICE_HMAC_SECRET=your-super-secret-device-hmac-key-change-in-production
DEVICE_SECRET=your-device-fingerprint-secret-key-change-this-in-production

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
SPIN_RATE_LIMIT_MAX=5

# ===========================================
# EMAIL CONFIGURATION (Nodemailer)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Lucky Voucher System <noreply@yourdomain.com>"

# ===========================================
# SMS CONFIGURATION (Twilio)
# ===========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_OTP_VERIFICATION=false
ENABLE_RECAPTCHA=false
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENV=production
FRONTEND_URL=http://localhost:3000

# ===========================================
# CORS & SECURITY
# ===========================================
CORS_ORIGIN=http://localhost:3000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===========================================
# DATA RETENTION
# ===========================================
DATA_RETENTION_DAYS=90

# ===========================================
# RAILWAY SPECIFIC (Production)
# ===========================================
# These will be automatically set by Railway
# DATABASE_URL=mysql://user:password@host:port/database
# RAILWAY_STATIC_URL=https://your-app.railway.app
# RAILWAY_ENVIRONMENT_NAME=production
